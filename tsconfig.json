{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "types": ["chrome"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "*.ts",
    "utils/*.ts",
    "popup/*.ts"
  ]
} 